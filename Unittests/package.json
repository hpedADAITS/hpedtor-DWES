{
  "name": "unittests-dwes",
  "version": "1.0.0",
  "type": "module",
  "description": "Unit tests and linting ",
  "scripts": {
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "test:report": "vitest run --reporter=json",
    "test:ui": "vitest --ui",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "sonar:start": "docker-compose up -d",
    "sonar:stop": "docker-compose down",
    "sonar:scan": "docker run --rm --network sonarnet -v %cd%:/usr/src sonarsource/sonar-scanner-cli:latest",
    "sonar:full": "npm run test:coverage && npm run sonar:scan",
    "clean": "rm -rf coverage node_modules .nyc_output dist",
    "check": "npm run lint && npm run format:check && npm run test:coverage"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@vitest/coverage-v8": "^2.1.9",
    "@vitest/ui": "^2.1.9",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.5",
    "vitest": "^2.1.0"
  },
  "author": "",
  "license": "MIT"
}
